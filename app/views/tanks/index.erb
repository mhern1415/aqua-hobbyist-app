
<html>
<div class="header">
  <h2>All Tanks</h2>
</div>

<div class="row">
  <div class="column middle" style="background-color:#cce6ff;font-size:25px; height: 2500px;"><% @tanks.each do |tank| %>
  <h2><a href="/tanks/<%= tank.id %>"><%= tank.title %></a></h2>
  <br>
  <img src="<%= tank.image_url %>" alt="<%= tank.title %>" height="220" width="300">
<br><br>
  <strong>Created At: <%= tank.created_at %></strong>
  <p>Tank Size: <%= tank.size %></p>
  <p>Fish and Plants: <%= tank.flora %></p>
  <p>By: <%= tank.user.name %></p>
<% end %></div>
</div>



</body>
</html>
