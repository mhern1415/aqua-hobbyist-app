

<div class="header">
  <h2>Edit Tank</h2>
</div>
<div class="row">
  <div class="column side" style="background-color:#cce6ff;"><form class="" action="/tanks/<%= @tank.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="title">Title:</label>
  <input type="text" name="title" value ="<%= @tank.title %>">
  <label for="size">Size:</label>
  <textarea name="size" style="width:auto; height:auto;"><%= @tank.size %></textarea>
  <label for="flora">Flora:</label>
  <textarea name="flora" style="width:auto; height:auto;"><%= @tank.flora %></textarea>
  <label for="image_url">Image URL:</label>
  <input type="text" name="image_url" value ="<%= @tank.image_url %>">
  <input type="submit" name="" value="Submit">
</form></div>
</div>
<div class="footer">
  <p><a href="/">Back</a></p>
</div>
