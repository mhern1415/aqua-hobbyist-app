<h1><%= @user.name %></h1>
<img src="<%= @user.image_url %>" alt="<%= @user.name %> profile photo" height="200" width="200">
<br><br>
<p>Email: <%= @user.email %></p>
<p>Bio: <%= @user.bio %></p>

<h1>My Tanks</h1>
<% @user.tanks.each do |tank| %>
  <h4><a href="/tanks/<%= tank.id %>"><%= tank.title %></a></h4>
  <img src="<%= tank.image_url %>" alt="<%= tank.title %>" height="220" width="300">
<br><br>
  <strong>Created At: <%= tank.created_at %></strong>
  <p>Tank Size: <%= tank.size %></p>
  <p>Fish and Plants: <%= tank.flora %></p>
  <p>By: <%= tank.user.name %></p>
<% end %>

